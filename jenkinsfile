pipeline{
    agent any
    environment{
        DIRECTORY_PATH = '/users/vish/sit753/'
        TESTING_ENVIRONMENT = '/users/vish/sit753/testing'
        PRODUCTION_ENVIRONMENT = '/users/vish/sit753/production/vish'
    }
    stages{
        stage('Build'){
            steps{
                echo "fetch the source code from $DIRECTORY_PATH specified by the environment variable"
                echo "compile the code and generate any necessary artifacts"
                withMaven {
                  sh "mvn clean verify"
                } // withMaven will discover the generated Maven artifacts, JUnit Surefire & FailSafe reports and FindBugs reports
            }

        }
        stage('Test'){
            steps{
                echo "unit tests"
                echo "integration tests"
                echo "end to end tests"
            }

        }
        stage('Code Quality Check'){
            steps{
                echo "check the quality of code"
            }

        }
        stage('Deploy'){
            steps{
                echo "deploy the application to $TESTING_ENVIRONMENT specified by the environment variable"
            }

        }
        stage('Approval'){
            steps{
                sleep 10
            }

        }
        stage('Deploy to Production'){
            steps{
                echo "Production environment is $PRODUCTION_ENVIRONMENT"
            }

        }
    }
}
